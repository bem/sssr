.user
{
    &__name
    {
        margin-right: 10px;

        text-decoration: none;

        color: #000;
    }

    &__post-time
    {
        font-size: 10px;
    }

    &__icon
    {
        position: absolute;
        right: 5px;
        bottom: 5px;

        width: 30px;
        height: 30px;

        border-radius: 3px;
    }
}
