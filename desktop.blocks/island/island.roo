.island
{
    font-size: 18px;
    line-height: 140%;

    position: relative;

    display: inline-block;

    box-sizing: border-box;
    width: 100%;
    margin-bottom: 15px;
    padding: 15px 5px 5px 15px;

    border-radius: 3px;
    background: #fff;
    box-shadow: inset 0 0 1px rgba(0, 0, 0, .4);
}
